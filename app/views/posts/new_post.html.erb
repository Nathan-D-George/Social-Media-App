<h1>New Post</h1>
<%= form_with model:@post, url: add_post_path, local: true do |f|%>
  <div class='image-upload mt-3'>
    <label for="post_image">
      <%= fa_icon 'file-image-o' %>
    </label>
    <%= f.file_field :image, accept:'image/jpg,image/jpeg,image/png,image/gif,image/avif', class:'form-control' %>
  </div>

  <div class='col-md-4 mt-3'>
    <%= f.label :caption%>
    <%= f.text_field :caption, class:'form-control', placeholder:'image caption'%>
  </div>
  <div class='mt-3'>
    <%= f.submit 'Post', data:{turbo_confirm: "Post this?"}, class:'btn btn-primary'%>
  </div>   
<%end%>

